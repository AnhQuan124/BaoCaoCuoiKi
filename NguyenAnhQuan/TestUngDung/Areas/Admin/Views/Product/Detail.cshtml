@model ModelEF.Model.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Chi tiết sản phẩm
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Chi tiết sản phẩm @Model.Name</h3>
            </div>
            <div class="card-body" style="margin-left:auto;margin-right:auto;">
                <div class="row">
                    <div class="col-lg-6">
                        <div>
                            <dl class="dl-horizontal" >
                                <dt>Ảnh</dt>
                                <dd><img src="@Model.Image" style="width:auto;height:200px" /></dd>
                                <dt>Tên sản phẩm</dt>
                                <dd>@Html.DisplayFor(model => model.Name)</dd>
                                <dt>Loại sản phẩm</dt>
                                <dd>@Html.DisplayFor(model => model.Category.Name)</dd>
                                <dt>Đơn giá</dt>
                                <dd>@Html.DisplayFor(model => model.UnitCost)</dd>
                                <dt>Số lượng</dt>
                                <dd>@Html.DisplayFor(model => model.Quantity)</dd>
                                <dt>Mô tả</dt>
                                <dd>@Html.DisplayFor(model => model.Description)</dd>
                                <dt>Tình trạng</dt>
                                <dd>@Html.DisplayFor(model => model.Status)</dd>
                            </dl>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.ActionLink("Sửa", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-cl" })
                </div>
            </div>
        </div>
    </div>
</div>